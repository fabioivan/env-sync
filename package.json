{
  "name": "@fabioivan/env-sync",
  "version": "1.0.0",
  "description": "Ferramenta para sincronização automática de configurações de banco de dados em projetos C# e React com suporte a Docker",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:prod": "npm run clean && npm run build && npm run add-shebang",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "help": "npm run dev -- --help",
    "watch": "tsc --watch",
    "add-shebang": "node scripts/add-shebang.js",
    "prepublishOnly": "npm run build:prod",
    "link:global": "npm run build:prod && npm link",
    "unlink:global": "npm unlink -g @fabioivan/env-sync",
    "test:global": "env-sync --help",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "setup:global": "node scripts/setup-global.js",
    "test:npm": "node scripts/test-npm-package.js",
    "publish": "node scripts/publish.js"
  },
  "keywords": [
    "database",
    "configuration",
    "sync",
    "csharp",
    "react",
    "port-management",
    "connection-string",
    "docker",
    "environment",
    "database-settings",
    "cli",
    "typescript",
    "nodejs"
  ],
  "author": {
    "name": "Fábio Ivan Borchardt",
    "email": "fabioivan.fb@gmail.com",
    "url": ""
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fabioivan/env-sync.git"
  },
  "bugs": {
    "url": "https://github.com/fabioivan/env-sync/issues"
  },
  "homepage": "https://github.com/fabioivan/env-sync#readme",
  "dependencies": {
    "commander": "^11.0.0",
    "chalk": "^4.1.2",
    "figlet": "^1.7.0",
    "boxen": "^5.1.2",
    "cli-table3": "^0.6.3",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/figlet": "^1.5.6",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "bin": {
    "env-sync": "./dist/main.js"
  },
  "preferGlobal": true,
  "publishConfig": {
    "access": "public"
  }
}