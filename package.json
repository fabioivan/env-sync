{
  "name": "@grupovoalle/env-sync",
  "version": "1.0.0",
  "description": "Ferramenta para sincronização automática de configurações de banco de dados em projetos C# e React com suporte a Docker",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:prod": "npm run clean && npm run build && npm run add-shebang",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "help": "npm run dev -- --help",
    "watch": "tsc --watch",
    "add-shebang": "node scripts/add-shebang.js",
    "link:global": "npm run build:prod && npm link",
    "unlink:global": "npm unlink -g @grupovoalle/env-sync",
    "test:global": "env-sync --help",
    "setup:global": "node scripts/setup-global.js"
  },
  "keywords": [
    "database",
    "configuration",
    "sync",
    "csharp",
    "react",
    "port-management",
    "connection-string",
    "docker",
    "environment",
    "database-settings",
    "cli",
    "typescript",
    "nodejs"
  ],
  "author": {
    "name": "Fábio Ivan Borchardt",
    "email": "fabio.borchardt@grupovoalle.com.br",
    "url": ""
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://git.syntesis.com.br/GrupoVoalle/Architecture/Environment.Updater#"
  },
  "homepage": "https://git.syntesis.com.br/GrupoVoalle/Architecture/Environment.Updater#readme",
  "dependencies": {
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.0.0",
    "figlet": "^1.7.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.6",
    "@types/inquirer": "^8.2.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "bin": {
    "env-sync": "./dist/main.js"
  },
  "preferGlobal": true,
  "publishConfig": {
    "access": "public"
  }
}
